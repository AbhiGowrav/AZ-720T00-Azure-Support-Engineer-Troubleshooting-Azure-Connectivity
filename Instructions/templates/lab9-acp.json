{
    "if": {
        "not": {
            "anyOf": [
                {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Compute/virtualMachines"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/sku.name",
                            "in": [
                                "Standard_D2s_v3"
                            ]
                        },
                        {
                            "field": "name",
                            "in": [
                                "VM1","VM2"
                            ]
                        },
                        {
                            "field": "location",
                            "In": "[resourceGroup().location]"
                        },
                        {
                            "field": "location",
                            "notEquals": "global"
                        }
                    ]
                },
                {
                "field": "type",
                "contains": "Microsoft.Network"
                },
                {
                "field": "type",
                "contains": "Microsoft.Compute/disks"
                },
                {
                "field": "type",
                "contains": "Microsoft.Compute/virtualMachines/extensions"
                },
                {
                "field": "type",
                "contains": "Microsoft.Storage/storageaccounts"
                },
                {
                  "field": "type",
                  "contains": "microsoft.devtestlab/schedules"
                }
            ]
        }
    },
    "then": {
        "effect": "Deny"
    }
}